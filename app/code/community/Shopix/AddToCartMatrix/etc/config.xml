<config>
    <modules>
        <Shopix_AddToCartMatrix>
            <version>1.0.0</version>
        </Shopix_AddToCartMatrix>
    </modules>
    <global>
        <blocks>
            <shopix_addtocartmatrix>
                <class>Shopix_AddToCartMatrix_Block</class>
            </shopix_addtocartmatrix>
        </blocks>
        <helpers>
            <shopix_addtocartmatrix>
                <class>Shopix_AddToCartMatrix_Helper</class>
            </shopix_addtocartmatrix>
        </helpers>
    </global>
    <frontend>
        <routers>
            <shopix_addtocartmatrix>
                <use>standard</use>
                <args>
                    <module>Shopix_AddToCartMatrix</module>
                    <frontName>shopix_addtocartmatrix</frontName>
                </args>
            </shopix_addtocartmatrix>
        </routers>
        <layout>
            <updates>
                <shopix_addtocartmatrix>
                    <file>shopix_addtocartmatrix.xml</file>
                </shopix_addtocartmatrix>
            </updates>
        </layout>
    </frontend>
</config>
