<layout version="0.1.0">
    <PRODUCT_TYPE_configurable>
        <reference name="head">
            <action method="addCss"><stylesheet>css/shopix_addtocartmatrix.css</stylesheet></action>
        </reference>
        <reference name="product.info">
            <block type="shopix_addtocartmatrix/addtocartmatrix" name="product.info.shopix_addtocartmatrix" as="shopix_addtocartmatrix" template="shopix_addtocartmatrix/addtocartmatrix.phtml">
